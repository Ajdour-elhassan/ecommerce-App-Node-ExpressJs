<%- include('../../shared/includes/head/', { pageTitle : 'add new products' }) %>
<link rel="stylesheet" href="/styles/form.css" />
<link rel="stylesheet" href="/styles/auth.css" />
</head>
</html>

<!-- Header -->
<%- include('../../shared/includes/header') %>

<!-- Main content -->
<main>
  <h3> Create New Product </h3>
  <form action="/admin/products?_csrf=<%= locals.csrfToken %>" method="POST" enctype="multipart/form-data">
    <p>
      <label for="title"> Title : </label>
      <input type="text" id="title" name="title" required>
    </p>
      <label for="image"> Image : </label>
      <input type="file" id="image" name="image" accept="image/png, image/jpg" required>
    </p>
    <p>
      <label for="summary"> Summary : </label>
      <input type="text" id="summary" name="summary" maxlength="250" required>
    </p>
    <p>
      <label for="price"> Price : </label>
      <input type="number" id="price" name="price" min="0.01" step="0.01" required>
    </p>
    <p>
      <label for="description"> Description : </label>
      <textarea id="description" name="description" rows="7" required> </textarea>
    </p>
    <p>
      <button type="reset" class="btn btn-alt">Reset</button>
      <button class="btn"> Save </button>
    </p>
  </form>
</main>

<%- include('../../shared/includes/footer') %>